Type: Package
Package: XPHT
Title: Shape Statistics with the Extended Persistent Homology Transform
Version: 1.0.0.9000
Date: 12-06-2022
Authors@R: c(
    person("James", "Morgan", , "james.morgan@sydney.edu.au", role = c("aut", "cre")),
    person("Yossi", "Bokor", , "yossi@yossi.eu", role = "aut"),
    person("Katharine", "Turner", , "katharine.turner@anu.edu.au", role = c("aut", "fnd")),
